//
//patch items
ACTION_PHP_EACH ~d2mira%game%prices~ AS item => price BEGIN
  ACTION_IF (FILE_EXISTS ~override/%item%.itm~) BEGIN
    COPY_EXISTING ~%item%.itm~ ~override~
      WRITE_LONG 0x34 price
    BUT_ONLY
  END
END


