//adjust base price per game
//


//game variables
ACTION_IF (GAME_IS ~iwdee iwd2 iwd how totlm iwd_in_bg2~)  BEGIN 
  OUTER_TEXT_SPRINT game ~iwd~    // IWDEE
END 
ELSE BEGIN
  OUTER_TEXT_SPRINT game ~bg2~    // BG games
END


//
//BG prices
